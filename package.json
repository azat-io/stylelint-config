{
  "name": "@azat-io/stylelint-config",
  "version": "0.1.1",
  "description": "Stylelint shareable config",
  "keywords": [
    "stylelint",
    "stylelint-config",
    "config",
    "code-styles",
    "linter"
  ],
  "repository": "azat-io/stylelint-config",
  "license": "MIT",
  "author": "Azat S. <to@azat.io>",
  "type": "module",
  "main": "./dist/index.js",
  "files": [
    "./dist"
  ],
  "scripts": {
    "build": "vite build",
    "release": "pnpm release:check && pnpm release:version && pnpm release:publish",
    "release:check": "pnpm test && pnpm run build",
    "release:publish": "clean-publish",
    "release:version": "changelogen --output changelog.md --release --push && prettier --write changelog.md",
    "test": "pnpm run /^test:/",
    "test:format": "prettier --check \"**/*.{js,ts,json,md,yml}\"",
    "test:js": "eslint .",
    "test:packages": "pnpm dedupe --check",
    "test:types": "tsc --noEmit --pretty"
  },
  "devDependencies": {
    "@azat-io/eslint-config": "^2.36.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^24.0.7",
    "changelogen": "^0.6.1",
    "clean-publish": "^5.2.2",
    "eslint": "^9.30.0",
    "jiti": "^2.4.2",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.0",
    "stylelint": "^16.21.0",
    "stylelint-config-recess-order": "^7.1.0",
    "stylelint-gamut": "^1.3.4",
    "stylelint-order": "^7.0.0",
    "stylelint-plugin-logical-css": "^1.2.3",
    "vite": "^7.0.0",
    "vite-plugin-dts": "^4.5.4"
  },
  "peerDependencies": {
    "stylelint": "^15.10.3",
    "stylelint-config-recess-order": "^4.3.0",
    "stylelint-gamut": "^1.3.3",
    "stylelint-order": "^6.0.3",
    "stylelint-plugin-logical-css": "^0.13.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
